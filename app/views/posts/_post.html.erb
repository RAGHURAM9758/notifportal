<div class="post container">
	<div class="row">
		<div class="post-head col-md-8">
			<h1><%= (post.title).upcase %></h1>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-offset-3">
			on <%= (post.updated_at).strftime("%B %e,%Y") %>
				by <b><%= post.user.fullname %></b>
		</div>
	</div>
	<div class="row">
		<div class="post-body col-md-8">
			<%= simple_format(post.content,html_options={class: "content"},wrapper_tag:"div") %>
		</div>
		<div class="col-md-3 category">
			<b>Category: </b>   <%= post.cat.category %>
		</div>
		<% if (post.fromdate).nil? && (post.todate).nil? && !(post.date).nil?%>
        	<div class="col-md-3">
          		<b>Event Date: </b><%= (post.date) %>
        	</div>
			<br>
      	<% end %>
      	<% if !(post.fromdate).nil? && !(post.todate).nil? && (post.date).nil? %>
					<div class="col-md-3 dates">
					<b>	from:</b><%=(post.fromdate)%>
        		<br>
        	<b>	to: </b><%= (post.todate) %>
      		</div>
      	<% end %>
		<% if !(post.time).nil? %>
			<div class="col-md-3">
				<b>Time:</b><%= (post.time).strftime("%H %p") %>
			</div>
		<% end %>
		<% if !(post.location).empty? %>
			<div class="col-md-3">
      	<b>Location:</b><%= post.location %>
      </div>
		<% end %>
		<% if getid == post.user_id %>
			 <div class="col-md-3">
        <%= link_to 'Edit', edit_post_path(post),:class => "btn btn-warning" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?'},:class => "btn btn-warning" %>
      <% end %>
			</div>				
	</div>
</div>

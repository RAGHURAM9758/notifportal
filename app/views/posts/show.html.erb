<% post=@post %>
<% title=post.title %>
<div class="post container">
  <div class="header">
    <div class="post-head">
      <h2 class="post-title"><b><%=  title.slice(0,1).capitalize + title.slice(1..-1) %></b></h2>
      on <%= (post.updated_at).strftime("%B").slice(0,3) + " " + (post.updated_at).strftime("%e") %>
        By <a href="#"><%= post.user.fullname %></a>
        under <a href="#" class="category"><%= post.cat.category %></a>
        <% if (post.fromdate).nil? && (post.todate).nil? && !(post.date).nil?%>
              <b> Event Date: </b><%= (post.date) %>
      <br>
        <% end %>
        <% if !(post.fromdate).nil? && !(post.todate).nil? && (post.date).nil? %>
          <b> from:</b><%=(post.fromdate)%>
            <br>
          <b> to: </b><%= (post.todate) %>
        <% end %>
    <% if !(post.time).nil? %>
        <b>Time:</b><%= (post.time).strftime("%H %p") %>
    <% end %>
    <% if !(post.location).empty? %>
        <b>Location:</b><%= post.location %>
      <% end %>

    </div>
  </div>
        <div class="post-body">
      <%= simple_format(post.content,html_options={class: "content"},wrapper_tag:"div") %>
    <% if false %>
    <% if getid == post.user_id %>
       <div class="col-md-3">
        <%= link_to 'Edit', edit_post_path(post),:class => "btn btn-warning" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?'},:class => "btn btn-warning" %>
      <% end %>
    <% end %>
</div>
</div>

